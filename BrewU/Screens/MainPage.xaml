<Page
    x:Class="BrewU.Screens.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrewU.Screens"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <local:StringFormatConverter x:Name="StringFormat"/>
    </Page.Resources>

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.Resources>

            <DataTemplate x:Name="OTMTemplate">
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,12,0,0">
                    <Image Source="{Binding Image}" Height="136" Width="190"/>
                    <StackPanel>
                        <TextBlock Text="Beer!" />
                    </StackPanel>
                </StackPanel>
            </DataTemplate>

        </Grid.Resources>

        <StackPanel>
            <TextBlock FontSize="42" Margin="0,10,0,-10" FontFamily="Segoe WP Semibold" Name="Location"/>
            <TextBlock FontSize="18" Margin="0,10,0,-20" FontFamily="Segoe WP Semibold" Name="Welcome"/>
            <ToggleSwitch Name="HideBeerButton" Toggled="HideBeerButton_Toggled"
                          OffContent="Show my Beers" OnContent="Hide my Beers"/>
        </StackPanel>

        <Hub x:Name="HubControl" HorizontalAlignment="Left" Margin="0,150,0,0" 
             VerticalAlignment="Stretch" Grid.Row="1">
            
            <Hub.Background>
                <ImageBrush ImageSource="/Assets/backgroundart.jpg"/>
            </Hub.Background>

            <!--Front Page-->
            <HubSection Header="Beers of the Month"  x:Name="OTMHub">
                <DataTemplate x:Name="OTMList">
                    <ListView ItemTemplate="{StaticResource OTMTemplate}"/>
                </DataTemplate>
            </HubSection>

            <!--Top Streams-->
            <HubSection Header="Top Streams">
                
            </HubSection>

            <!--Top Games-->
            <HubSection Header="Top Games">
                
            </HubSection>

            <!--Followed Streams-->
            <HubSection Header="Following">
                
            </HubSection>

            <!--Settings-->
            <HubSection Header="Settings">
                
            </HubSection>
        </Hub>
        <!--<UI:AdControl Name="FrontPageAd" ApplicationId="db8688fa-d097-4a47-831c-0dbff16cf24b" 
                      AdUnitId="163143" Height="50" Width="300" VerticalAlignment="Top" 
                      HorizontalAlignment="Right" IsAutoRefreshEnabled="True" 
                      Keywords="game, games, twitch, twitchtv"/>-->
    </Grid>
</Page>
